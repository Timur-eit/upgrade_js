{
    "compilerOptions": {
        "target": "esnext", // latest version
        "lib": ["dom", "dom.iterable"],
        "baseUrl": "src",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}